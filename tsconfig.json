{
  "compilerOptions": {
    "incremental": true,
    "target": "es2016",
    "module": "commonjs",
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*",
        "src"
      ],
      "@shared/*": [
        "shared/*",
        "shared"
      ],
    },
    "resolveJsonModule": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*",
    "shared/**/*",
  ],
  "exclude": [
    "node_modules",
    "src/**/*.sql"
  ]
}