{
  "name": "ikatoo-backend",
  "version": "0.0.1",
  "description": "Backend API from ikatoo.com.br",
  "main": "index.js",
  "scripts": {
    "start": "node dist/infra/http/hapi/main.js",
    "typecheck": "tsc --noEmit",
    "test": "vitest run --no-threads",
    "test:watch": "vitest",
    "test:domain": "vitest run --no-threads src/domain/**/*.test.ts",
    "test:domain:watch": "vitest --no-threads src/domain/**/*.test.ts",
    "test:application": "vitest run --no-threads src/application/**/*.test.ts",
    "test:application:watch": "vitest --no-threads src/application/**/*.test.ts",
    "test:infra": "vitest run --no-threads src/infra",
    "test:infra:watch": "vitest --no-threads src/infra",
    "dev": "tsx --watch src/infra/http/hapi/main.ts",
    "build": "rimraf dist && tsc --project tsconfig.build.json && tsc-alias -p tsconfig.build.json"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/ikatoo/backend.git"
  },
  "author": "Milton Carlos Katoo (mckatoo@gmail.com)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ikatoo/backend/issues"
  },
  "homepage": "https://ikatoo.com.br",
  "engines": {
    "node": "18.15.0",
    "npm": "9.5.0"
  },
  "devDependencies": {
    "@types/node": "^18.15.0",
    "globstar": "^1.0.0",
    "rimraf": "^4.4.0",
    "tap-spec": "^5.0.0",
    "tsc-alias": "^1.8.3",
    "tsx": "^3.12.3",
    "typescript": "^4.9.5",
    "vitest": "^0.29.2"
  },
  "dependencies": {
    "@hapi/hapi": "^21.3.0",
    "dotenv": "^16.0.3",
    "pg-promise": "^11.4.3"
  }
}
